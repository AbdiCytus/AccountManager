generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Model User (Pemilik Aplikasi)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  
  // Relasi ke data-data milik user
  accounts      Account[]      // Akun OAuth (Google login sistem)
  sessions      Session[]
  
  // Data Aplikasi Utama
  savedAccounts SavedAccount[] // Daftar Akun Platform
  emailIdentities EmailIdentity[] // Daftar Email
  accountGroups AccountGroup[] // Daftar Grup
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// ---------------------------------------------------------
// 1. MODEL EMAIL (Email Identity)
// ---------------------------------------------------------
model EmailIdentity {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name          String?  // Nama Pengguna (Opsional)
  email         String   // Alamat Email (Wajib)
  encryptedPassword String // Password Email (Wajib)
  
  // Fitur 2FA
  is2FAEnabled  Boolean  @default(false)
  phoneNumber   String?  // Wajib jika 2FA aktif
  
  // Self-Relation: Email Pemulih (Diambil dari email lain)
  recoveryEmailId String?
  recoveryEmail   EmailIdentity?  @relation("RecoveryRelation", fields: [recoveryEmailId], references: [id])
  recoveringFor   EmailIdentity[] @relation("RecoveryRelation")

  // Fitur Verifikasi
  isVerified        Boolean @default(false) // Ikon Centang/Silang
  verificationToken String? // Token untuk link verifikasi

  // Relasi ke Akun Platform (The Children)
  linkedAccounts SavedAccount[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([userId, email]) // Satu user tidak boleh punya email kembar
}

// ---------------------------------------------------------
// 2. MODEL GROUP (Buku)
// ---------------------------------------------------------
model AccountGroup {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name          String   // Judul Group
  
  // Relasi: Group isinya akun-akun
  accounts      SavedAccount[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// ---------------------------------------------------------
// 3. MODEL AKUN PLATFORM (SavedAccount)
// ---------------------------------------------------------
model SavedAccount {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  platformName  String   // Nama Platform (Wajib)
  username      String   // Username (Wajib)
  encryptedPassword String? // Bisa null jika "No Password" dicentang
  
  // Kategori sekarang Array String agar bisa pilih lebih dari satu
  // Contoh: ["Social", "Work"]
  categories    String[] 

  icon          String?  // URL/Base64 Gambar Rasio 1:1
  website       String?  // Link Web
  description   String?  // Keterangan
  
  // Relasi ke Email (Opsional / No Email)
  // Jika EmailIdentity dihapus, field ini jadi null (SetNull)
  emailId       String?
  emailIdentity EmailIdentity? @relation(fields: [emailId], references: [id], onDelete: SetNull)

  // Relasi ke Group (Opsional)
  groupId       String?
  group         AccountGroup? @relation(fields: [groupId], references: [id], onDelete: SetNull)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// ---------------------------------------------------------
// MODEL BAWAAN NEXT-AUTH (JANGAN DIUBAH)
// ---------------------------------------------------------
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
