generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String          @id @default(cuid())
  name            String?
  email           String?         @unique
  emailVerified   DateTime?
  image           String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  accounts        Account[]
  accountGroups   AccountGroup[]
  activityLogs    ActivityLog[]
  emailIdentities EmailIdentity[]
  savedAccounts   SavedAccount[]
  sessions        Session[]
}

model EmailIdentity {
  id                   String          @id @default(cuid())
  userId               String
  name                 String?
  email                String
  encryptedPassword    String
  is2FAEnabled         Boolean         @default(false)
  phoneNumber          String?
  recoveryEmailId      String?
  isVerified           Boolean         @default(false)
  verificationToken    String?
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt
  tokenExpiresAt       DateTime?
  lastVerificationSent DateTime?
  verificationAttempts Int             @default(0)
  recoveryEmail        EmailIdentity?  @relation("RecoveryRelation", fields: [recoveryEmailId], references: [id])
  recoveringFor        EmailIdentity[] @relation("RecoveryRelation")
  user                 User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  linkedAccounts       SavedAccount[]

  @@unique([userId, email])
}

model AccountGroup {
  id        String         @id @default(cuid())
  userId    String
  name      String
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  accounts  SavedAccount[]
}

model SavedAccount {
  id                String         @id @default(cuid())
  userId            String
  platformName      String
  username          String
  encryptedPassword String?
  categories        String[]
  icon              String?
  website           String?
  description       String?
  emailId           String?
  groupId           String?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  emailIdentity     EmailIdentity? @relation(fields: [emailId], references: [id])
  group             AccountGroup?  @relation(fields: [groupId], references: [id])
  user              User           @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ActivityLog {
  id        String   @id @default(cuid())
  userId    String
  action    String
  entity    String
  details   String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
